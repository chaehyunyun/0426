<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    //보라색 부분 > 운동목록
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="300dp"
        android:background="#872378"
        android:layout_weight="4">
        //스크롤뷰
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <CheckBox
                        android:id="@+id/ex1"
                        android:layout_width="30dp"
                        android:layout_height="130dp"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        ></CheckBox>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lunge"
                        android:layout_margin="10dp"
                        android:id="@+id/v1">
                    </ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <CheckBox
                        android:id="@+id/ex2"
                        android:layout_width="30dp"
                        android:layout_height="130dp"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        ></CheckBox>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lunge"
                        android:layout_margin="10dp"></ImageView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <CheckBox
                        android:layout_width="30dp"
                        android:layout_height="130dp"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        ></CheckBox>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lunge"
                        android:layout_margin="10dp"
                        android:id="@+id/lunge1"></ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <CheckBox
                        android:layout_width="30dp"
                        android:layout_height="130dp"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        ></CheckBox>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lunge"
                        android:layout_margin="10dp"
                        android:id="@+id/lunge2"></ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <CheckBox
                        android:layout_width="30dp"
                        android:layout_height="130dp"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        ></CheckBox>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lunge"
                        android:layout_margin="10dp"></ImageView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <CheckBox
                        android:layout_width="30dp"
                        android:layout_height="130dp"
                        android:background="@color/white"
                        android:layout_margin="10dp"
                        ></CheckBox>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/lunge"
                        android:layout_margin="10dp"></ImageView>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



</LinearLayout>